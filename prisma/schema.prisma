generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./banco_trigger.db"
}

model Users {
  user_id          Int @id @default(autoincrement())
  name             String 
	username         String @unique
	email            String @unique
	senha            String 
  adm              Boolean @default(false)
  genero           String
  data_nascimento  DateTime 
  foto_perfil      String 
  cpf              String @unique
  setor            String
}

model Patrimonios {
  patrimonio_id         Int @id @default(autoincrement())
  name                  String 
  status                Boolean @default(true)
  estoque               Int 
  id_user_responsavel   Int?
}



model Relatorio {
  relatorio_id Int @id @default(autoincrement())
  tipo String 
  nome String 
  setor String 
  conteudo String
}